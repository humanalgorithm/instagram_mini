
<%= link_to "Upload a new image", new_image_path(:user_id => current_user.id)%>

<% @images.each do |x| %>
	<br><br>
	<a href="<%= view_image_path(:user_id=>current_user.id, :image_id => x.id) %>">
	<%= image_tag(x.img.url(:medium)) %>
	</a>
    	<br> 
      <div class="image-description-box"> <%= x.description %></div>
      <a data-confirm="Are you sure?" data-method="delete" href="<%= delete_image_path(:user_id => current_user.id, :image_id => x.id) %>" rel="nofollow">Delete</a>
      
<% end %>
